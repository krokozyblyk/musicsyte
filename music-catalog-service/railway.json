{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd music-catalog-service && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd music-catalog-service && java -jar target/music-catalog-service-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

