{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd music-catalog-service && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "bash music-catalog-service/start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

