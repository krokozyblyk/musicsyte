{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cp pom-standalone.xml pom.xml && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -jar target/eureka-server-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

